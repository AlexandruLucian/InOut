<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mycompany.inout.WorkActivity"
    android:id="@+id/activity_work">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:hint="dd/mm/yyyy"
        android:textColorHint="@color/wallet_holo_blue_light"
        android:id="@+id/startDateEditText"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:text="to"
        android:gravity="center"
        android:layout_below="@+id/startDateEditText"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:hint="dd/mm/yyyy"
        android:textColorHint="@color/wallet_holo_blue_light"
        android:id="@+id/endDateEditText"
        android:gravity="center"
        android:layout_below="@+id/editText2"
        android:layout_alignLeft="@+id/startDateEditText"
        android:layout_alignStart="@+id/startDateEditText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:id="@+id/calculateBtn"
        android:layout_below="@+id/endDateEditText"
        android:layout_alignRight="@+id/endDateEditText"
        android:layout_alignEnd="@+id/endDateEditText" />

</RelativeLayout>
